@page
@model ViewRecipeModel
@{
    ViewData["Title"] = "View Recipe";
}

<h1 class="mb-4">View Recipe</h1>
<h4>@Html.DisplayFor(model => model.Recipe.RecipeName)</h4>
<hr class="my-4">

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.Notes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.Notes)
        </dd>
        <dt class="col-sm-2">
            Ingredients
        </dt>
        <dd class="col-sm-10">
            @foreach (var ri in Model.Recipe.RecipeIngredients)
            {
                <span>
                @ri.UnitsCount
                @ri.UnitsType
                @ri.Ingredients.BaseName
                </span>
                <br />
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.Instructions)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.Instructions)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.Source)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.Source)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Index">Back to List</a>
</div>