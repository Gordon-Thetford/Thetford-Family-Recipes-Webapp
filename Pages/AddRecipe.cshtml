@page
@model AddRecipeModel

@{
    ViewData["Title"] = "Add Recipe";
}

<h1 class="mb-4">Create Recipe</h1>
<hr class="my-4">
<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    
    <div class="row">
        <div class="col-3">
            <div class="mb-3">
                <input asp-for="Recipe.RecipeName" class="form-input">
                <label asp-for="Recipe.RecipeName" class="form-label">@Html.DisplayNameFor(m => m.Recipe.RecipeName)</label>
                <span asp-validation-for="Recipe.RecipeName" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-3">
            <div class="mb-3">
                <input asp-for="Recipe.Description" class="form-input">
                <label asp-for="Recipe.Description" class="form-label">@Html.DisplayNameFor(m => m.Recipe.Description)</label>
                <span asp-validation-for="Recipe.Description" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-3">
            <div class="mb-3">
                <input asp-for="Recipe.Notes" class="form-input">
                <label asp-for="Recipe.Notes" class="form-label">@Html.DisplayNameFor(m => m.Recipe.Notes)</label>
                <span asp-validation-for="Recipe.Notes" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-3">
            <div class="mb-3">
                <input asp-for="Recipe.Instructions" class="form-input">
                <label asp-for="Recipe.Instructions" class="form-label">@Html.DisplayNameFor(m => m.Recipe.Instructions)</label>
                <span asp-validation-for="Recipe.Instructions" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-3">
            <label class="form-label">Select the ingredients</label>
            <select asp-for="Recipe.RecipeIngredients" asp-items="Model.IngredientsDropDown" class="form-select">
                <option value="">Choose...</option>
            </select>
            @* @Html.DropDownListFor<IngredientsDropDown>() *@
            @* @Html.DropDownList<IngredientsDropDown>() *@
            @* @Html.GetEnumSelectList<AddRecipeModel.IngredientsDropDown>() *@
            <span asp-validation-for="Recipe.RecipeIngredients" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-3">
            <div class="form-check">
                <input asp-for="Recipe.IsFavorite" class="form-check-input" type="checkbox">
                <label asp-for="Recipe.IsFavorite" class="form-check-label">@Html.DisplayNameFor(m => m.Recipe.IsFavorite)?</label>
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-secondary">Create</button>
</form>

<div>
    <a asp-page="Index">Back to List</a>
</div>